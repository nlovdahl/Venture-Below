.ifndef RAND_INCLUDED_
RAND_INCLUDED_ = 1

; Sets the seed used to generate pseudo-random numbers.
; This procedure takes a single word parameter, the seed to use, which should
; be passed through the X register. A non-zero default seed will be used if the
; seed passed is zero.
; Nothing is returned by this procedure.
.global setSeed

; Gets the next generated random byte and places it in rand_value.
; This procedure takes no parameters and returns nothing.
.global nextRandomByte

; Gets the next generated random word and places it in rand_value.
; This procedure takes no parameters and returns nothing.
.global nextRandomWord

; The register that holds the numbers generated by nextRandomByte and
; nextRandomWord. This register should be read to retrieve these values.
.global rand_value

.endif ; RAND_INCLUDED_
